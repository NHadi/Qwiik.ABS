{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7087"
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{version}/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7167
        }
      ],
      "UpstreamPathTemplate": "/gateway/appointment/{version}/{everything}",
      "UpstreamHttpMethod": [
        "POST",
        "PUT",
        "GET",
        "DELETE"
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 10,
        "Limit": 3
      },
      "FileCacheOptions": {
        "TtlSeconds": 10
      }
    },
    {
      "DownstreamPathTemplate": "/api/{version}/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7061
        }
      ],
      "UpstreamPathTemplate": "/gateway/customer/{version}/{everything}",
      "UpstreamHttpMethod": [
        "POST",
        "PUT",
        "GET",
        "DELETE"
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 10,
        "Limit": 3
      },
      "FileCacheOptions": {
        "TtlSeconds": 10
      }    
    }
  ]
}